{
  "manifest_version": 3,
  "name": "ARC Event Notifications",
  "version": "1.0.0",
  "description": "Get notified for specific ARC events on selected maps",
  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}